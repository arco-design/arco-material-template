{
  "name": "test",
  "version": "1.0.0",
  "description": "",
  "keywords": [
    "vue",
    "arco-design"
  ],
  "author": "",
  "license": "MIT",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "umd": {
    "file": "dist/index.min.js",
    "module": "ArcoComponents"
  },
  "scripts": {
    "dev": "start-storybook -p 6006",
    "build": "npm run build:component && npm run build:style && npm run dtsgen",
    "build:component": "arco-vue-scripts build:material-library",
    "build:style": "arco-vue-scripts build:style",
    "dtsgen": "arco-vue-scripts dtsgen 'components/**/*.{ts,tsx,vue}'",
    "docgen": "arco-vue-scripts docgen",
    "test": "arco-vue-scripts test",
    "add:component": "node ./scripts/add-component.js",
    "prepublishOnly": "npm run clean && npm run build && npm run docgen",
    "preview": "arco preview"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{less,css}": [
      "stylelint --fix",
      "prettier --write"
    ]
  },
  "peerDependencies": {
    "vue": "^3.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.6",
    "fs-extra": "^9.1.0",
    "fast-glob": "^3.2.7"
  },
  "_files": [
    "dist",
    "docs"
  ]
}
